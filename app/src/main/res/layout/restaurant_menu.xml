<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey"
    android:paddingBottom="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bg"
        android:padding="12dp">

    <ImageView
        android:id="@+id/restaurant_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/design_image_bg" />


        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/restaurant_icon"
            android:layout_toRightOf="@+id/restaurant_icon"
            android:text="Restaurant Name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
        android:id="@+id/restaurant_rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/restaurant_icon"
        android:layout_toEndOf="@id/restaurant_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/restaurant_name"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="Rating:" />

    <TextView
        android:id="@+id/restaurant_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/restaurant_rating_text"
        android:layout_toRightOf="@id/restaurant_icon"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="Description" />

    <TextView
        android:id="@+id/restaurant_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/restaurant_rating_text"
        android:layout_toEndOf="@id/restaurant_rating_text"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/restaurant_name"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="Rating" />

        <ImageView
            android:id="@+id/restaurant_rating_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/restaurant_rating"
            android:layout_below="@+id/restaurant_name"
            android:textColor="@color/white"
            app:srcCompat="@drawable/ic_star"
            android:layout_above="@id/restaurant_description"
            />



    </RelativeLayout>

</RelativeLayout>